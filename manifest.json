{
  "manifest_version": 3,
  "name": "Catppuccin Startpage",
  "version": "1.0.0",
  "description": "A beautiful, customizable startpage with Catppuccin color themes",
  "author": "Bryan Gibson",
  
  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*",
        "style.css",
        "script.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
